/*
F 2 F
2 4 2
? ? ?
*/
def differenceBoard1() = {
  var board = buildBoard(3, 3, Cons(XY(0,0),Cons(XY(2,0),Cons(XY(0,2),Cons(XY(2,2),Nil())))))
  try {
    board.revealCell(XY(0,1))
    board.revealCell(XY(1,0))
    board.revealCell(XY(1,1))
    board.revealCell(XY(2,1))
  }
  with GameOver {()}
  board
}

